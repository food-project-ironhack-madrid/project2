<div>
    <h2>Restaurants with: {{search}} food</h2>
    <ul>
        {{#each restaurants}}
            <li><a href="/restaurant/details/{{id}}">{{name}}</a></li>
        {{/each}}
    </ul>


    <h1 class="recipe">Recipes:</h1>
    <div class="full-restaurant">
        {{#each result}}
            <div class="restaurant-info">
                
                <a  href={{recipe.image}} data-lightbox={{recipe.image}}>
                <img src={{recipe.image}} alt="">
                </a>
               

                <h2><a href="{{recipe.url}}">{{recipe.label}}</a></h2>

<div class= "food-container">
    <div class= "food-container-1">
                <p>Health Labels:</p>

                <ul>
                    {{#each recipe.healthLabels}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                </div>
<div class= "food-container-2">
                <p>Diet Labels:</p>

                <ul>
                    {{#each recipe.dietLabels}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                </div>
</div>
            </div>

        {{/each}}
    </div>

</div>