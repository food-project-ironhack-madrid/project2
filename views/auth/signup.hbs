<section class="box">
<h2>Signup</h2>

<form action="/auth/signup" method="POST"  enctype="multipart/form-data" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="Username">



  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="">
  
  <label for="email"> Email</label>
  <input id="email" type="email" name="email" placeholder="johnsnow@ironhack.com">

  <label for="role">Who are you?</label>
    <select name="role" id="role">
    <option value="RESTAURANT">Restaurant</option>
    <option value="FOODTASTER">Food Taster</option>
  </select>


  <label for="menu">Profile Picture</label>
    <input id="menu" type="file" name="photo" placeholder="" required></article>
  <br>
  {{#if message }}
